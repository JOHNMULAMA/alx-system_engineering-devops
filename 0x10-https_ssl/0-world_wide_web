#!/usr/bin/env bash

# Function to display information about a subdomain
domain_information () {
    local subdomain="$1"
    local domain="$2"
    local dig_result
    dig_result=$(dig "$subdomain.$domain" +short)
    if [ -n "$dig_result" ]; then
        local record_type="A"
        local destination="$dig_result"
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    else
        echo "No records found for subdomain $subdomain"
    fi
}

# Main script
if [ "$#" -eq 1 ]; then
    domain="$1"
    subdomains=("www" "lb-01" "web-01" "web-02")
    for subdomain in "${subdomains[@]}"; do
        domain_information "$subdomain" "$domain"
    done
elif [ "$#" -eq 2 ]; then
    domain_information "$2" "$1"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
